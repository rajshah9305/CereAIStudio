# CereStudioAI Enhanced - Environment Variables
# Copy this file to .env and update with your actual values

# Application Environment
NODE_ENV=production
FLASK_ENV=production
PORT=5000

# Frontend URLs
REACT_APP_API_URL=https://yourdomain.com
REACT_APP_ANALYTICS_API=https://yourdomain.com/api/analytics

# Security
SECRET_KEY=your-super-secret-key-here-change-this
JWT_SECRET=your-jwt-secret-here-change-this

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/cerestudio
REDIS_URL=redis://localhost:6379/0

# External APIs
CEREBRAS_API_KEY=your-cerebras-api-key-here
ANALYTICS_ENDPOINT=https://analytics.yourdomain.com

# Monitoring & Logging
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
LOG_LEVEL=INFO

# Email Configuration (Optional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@domain.com
MAIL_PASSWORD=your-email-password

# File Storage (Optional)
UPLOAD_FOLDER=/tmp/uploads
MAX_CONTENT_LENGTH=16777216

# Rate Limiting
RATELIMIT_STORAGE_URL=redis://localhost:6379/1

# Caching
CACHE_TYPE=redis
CACHE_REDIS_URL=redis://localhost:6379/2

# Celery (Background Tasks)
CELERY_BROKER_URL=redis://localhost:6379/3
CELERY_RESULT_BACKEND=redis://localhost:6379/4

# Development Settings
DEBUG=false
TESTING=false
